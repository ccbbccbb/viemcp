{
  "name": "viemcp",
  "version": "0.0.4",
  "description": "A Model Context Protocol server for blockchain interactions using viem",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "blockchain",
    "ethereum",
    "viem",
    "evm"
  ],
  "homepage": "https://github.com/ccbbccbb/viemcp#readme",
  "bugs": {
    "url": "https://github.com/ccbbccbb/viemcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccbbccbb/viemcp.git"
  },
  "license": "MIT",
  "author": "charchar <char@automatethestack.com>",
  "contributors": [
    "charchar <char@automatethestack.com>"
  ],
  "type": "module",
  "bin": {
    "viemcp": "./build/index.js"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node build/index.js",
    "dev": "bun --watch src/index.ts",
    "clean": "rm -rf build",
    "biome:check": "biome check .",
    "biome:format": "biome format . --write",
    "typecheck": "tsc --noEmit",
    "prepack": "bun run clean && bun run biome:check && bun run typecheck && bun run build",
    "prepublishOnly": "bun run prepack",
    "release": "bun run prepack && bun publish --access public",
    "release:dry": "bun run prepack && bun publish --dry-run",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev:site": "cd site && bun run dev",
    "build:site": "cd site && bun run build"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.2.19"
  },
  "packageManager": "bun@1.2.19",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^17.2.1",
    "viem": "^2.33.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/bun": "^1.2.19",
    "@types/node": "^24.2.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
